@model MStartSupply.Models.Entrada

@{
    ViewData["Title"] = "Remover Entrada";
}

<h1>Remover</h1>

<h3>Tem certeza que deseja remover esta entrada?</h3>
<div>
    <h4>Entrada</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalEntrada)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MercadoriaID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MercadoriaID)
        </dd>

    </dl>

    <form asp-action="Remover">
        <input type="hidden" asp-for="EntradaID" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>